<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item> <!-- Điều chỉnh vị trí của đổ bóng -->
        <shape android:shape="rectangle">
            <solid android:color="#40E4E4E4" /> <!-- Màu của đổ bóng -->
            <corners android:radius="10dp" /> <!-- Độ cong của góc, nên giống với background -->
        </shape>
    </item>

    <!-- Background Shape -->
    <item  android:top="4dp">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" /> <!-- Màu nền -->
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"/> <!-- Độ cong của góc -->
        </shape>
    </item>
</layer-list>