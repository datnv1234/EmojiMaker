<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/AIEmojiMaker.FullscreenContainer">

    <data>

    </data>
    <LinearLayout
        android:orientation="vertical"
        android:tag="layout/activity_new_screen_emoji_0"
        android:background="@drawable/new_background_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.emojimaker.EmojiMakerActivity">
        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">
            <ImageButton
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_back_round"
                android:layout_centerVertical="true"
                android:text="@string/back"
                android:elevation="@dimen/_14sdp"
                android:translationZ="@dimen/_14sdp"
                android:contentDescription="@string/back"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_create"
                android:background="@drawable/bg_button_gray"
                android:paddingLeft="12dp" android:paddingTop="8dp"
                android:paddingRight="12dp" android:paddingBottom="8dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/create"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="#1F1F29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Create_Emoji"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginHorizontal="16dp"
                android:layout_toStartOf="@+id/tv_create"
                android:layout_toEndOf="@+id/iv_back"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/transparent_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/g1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.58"/>
            <RelativeLayout android:id="@+id/rl_emoji"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/g1"
                app:layout_constraintTop_toTopOf="0">
                <com.wa.ai.emojimaker.utils.customview.customsticker.StickerView
                    android:id="@+id/stickerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:showBorder="true"
                    app:showIcons="true"/>
                <RelativeLayout
                    android:id="@+id/rl_lock"
                    android:background="@drawable/border_circle_bg_white"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp">
                    <ImageView
                        android:id="@+id/iv_lock_emoji"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_unlock_emoji"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:background="@drawable/border_circle_bg_white"
                    android:visibility="gone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp">
                    <ImageView
                        android:id="@+id/iv_delete_emoji"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete_emoji"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/ll_options"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintTop_toBottomOf="@+id/g1">
                <RelativeLayout
                    android:id="@+id/rl_option_header"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp">
                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="20dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_refresh"
                        android:layout_alignParentStart="true"/>
                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="20dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_layer"
                        android:layout_alignParentEnd="true"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <ImageView
                            android:id="@+id/iv_flip_horizontal"
                            android:layout_width="20dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_flip_horizontal"/>
                        <ImageView
                            android:id="@+id/iv_flip_vertical"
                            android:layout_width="20dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_flip_vertical"
                            android:layout_marginStart="24dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <View android:id="@+id/view1"
                    android:background="#F4DED3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rl_option_header"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view2"
                    android:layout_below="@+id/view1">
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="vertical"
                        android:id="@+id/rv_icon" android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="6"/>
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <View android:id="@+id/view2"
                    android:background="#F4DED3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/rl_options"/>
                <RelativeLayout
                    android:id="@+id/rl_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <RelativeLayout
                        android:id="@+id/rl_recent"
                        android:background="@drawable/border_bg_item_options"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="12dp"
                        android:paddingHorizontal="14dp">
                        <ImageView
                            android:id="@+id/iv_option"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_recent"
                            android:layout_centerHorizontal="true"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:textSize="11sp"
                            android:textColor="#0C111D"
                            android:id="@+id/tv_option"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/recent"
                            android:layout_below="@+id/iv_option"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/poppins_semibold"/>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/rl_recent"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>