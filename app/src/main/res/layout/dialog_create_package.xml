<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="vertical"
            android:background="@drawable/bg_popup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="Package Name"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_20ssp"
                tools:ignore="HardcodedText" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtPkgName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="50dp"
                    android:background="@drawable/bg_edittext"
                    android:backgroundTintMode="add"
                    android:drawablePadding="12dp"
                    android:hint="abc"
                    android:inputType="text"
                    android:maxLength="30"
                    tools:ignore="HardcodedText"
                    android:autofillHints="name" />
                <!--android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "-->
                <ImageButton
                    android:id="@+id/btnClearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_close"
                    android:contentDescription="@string/delete" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_button_disable"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:foreground="?android:attr/selectableItemBackground"/>
                <TextView
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:gravity="center"
                    android:background="@drawable/bg_button_enabled"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_native"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                app:layout_goneMarginTop="@dimen/_4sdp">
                <FrameLayout
                    android:id="@+id/fr_native_ads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/ads_native_shimmer" />
                </FrameLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>