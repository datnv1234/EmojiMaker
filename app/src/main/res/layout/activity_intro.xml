<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#11141A">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="328:360"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_weight="2"
            app:dotsColor="#46484B"
            app:dotsSize="8dp"
            app:dotsSpacing="3dp"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginStart="16dp"
            app:selectedDotColor="#0085FF" />

        <com.wa.ai.emojimaker.utils.customview.RippleCornerTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="56dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_medium"
            android:foreground="?selectableItemBackground"
            android:padding="10dp"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            app:flow_horizontalGap="10dp"
            app:flow_verticalGap="10dp"
            app:backgroundColorView="#0085FF"
            app:cornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dotsIndicator" />

        <RelativeLayout
            android:id="@+id/rl_native"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_40sdp"
            app:layout_constraintBottom_toTopOf="@id/rl_banner"
            app:layout_constraintVertical_bias="1.0"
            app:layout_goneMarginTop="@dimen/_4sdp">

            <FrameLayout
                android:id="@+id/fr_native_ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/ads_native_shimmer" />
            </FrameLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/rl_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent">
            <include
                android:id="@+id/ads_banner"
                layout="@layout/ads_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--        <include-->
            <!--            android:id="@+id/ads_banner"-->
            <!--            layout="@layout/ads_banner"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content" />-->
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>